<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.consultation.DoctorIntroActivity"
    android:background="@color/colorBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/iv_doctor_intro_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_consultation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card" >

        <ImageView
            android:id="@+id/iv_doctor_intro_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘医生"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主治医师"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呼吸外科"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="200dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桂林医学院附属医院"
            android:textSize="15sp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询量"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="105dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好评率"
            android:layout_gravity="right"
            android:layout_marginTop="140dp"
            android:layout_marginRight="100dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:layout_marginTop="110dp"
            android:layout_marginRight="95dp"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="介绍详情"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="250dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="擅长"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="干啥啥不行"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/iv_doctor_intro_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长期从事呼吸内科的医疗、教学、科研工作。重点开展哮喘，慢阻肺疾病，呼吸衰竭和呼吸系统常见疾病的规范化诊疗、疑难病、少见病和呼吸危重症监护与救治等方面的研究。并首次证实了隐匿型哮喘的存在。他所领导的研究所对慢性不明原因咳嗽诊断成功率达85%，重症监护室抢救成功率达91%。"
            android:textSize="14sp"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="10dp"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="患者评价"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="530dp">


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>