<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my.PrescriptionDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryWhite">
        <ImageView
            android:id="@+id/iv_prescription_detail_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处方详情"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"
            android:layout_marginTop="49dp"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="惠民医疗平台处方笺"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/et_patient_name"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="患者刘"
                    android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/et_patient_gender"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp"
                    android:paddingBottom="5dp"
                    android:hint="男"
                    android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/et_patient_age"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="260dp"
                    android:paddingBottom="5dp"
                    android:hint="22"
                    android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科别"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"/>
                <EditText
                    android:id="@+id/et_patient_sick_room"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="5dp"
                    android:hint="呼吸外科"
                    android:focusable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开具日期"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="60dp"/>
                <EditText
                    android:id="@+id/et_patient_date"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="40dp"
                    android:paddingBottom="5dp"
                    android:hint="2021-1-29"
                    android:focusable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="诊断结果"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tv_patient_result"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:text="等死吧！告辞"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:text="RP"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tv_patient_rp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:text="多喝热水"
                    android:textSize="16sp"/>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLineGray"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/et_patient_doctor"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="刘医生"
                    android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/et_patient_price"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:paddingBottom="5dp"
                    android:hint="¥ 20"
                    android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊室电话"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"/>
                <EditText
                    android:id="@+id/et_patient_doctor_phone"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp"
                    android:paddingBottom="5dp"
                    android:hint="18178589543"
                    android:focusable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊室地址"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"/>
                <EditText
                    android:id="@+id/et_patient_doctor_address"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="70dp"
                    android:paddingBottom="5dp"
                    android:hint="桂林市叠彩区"
                    android:focusable="false"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>