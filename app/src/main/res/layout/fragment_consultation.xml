<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门门诊"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:columnCount="4"
            android:rowCount="4"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_obstetrics_gynecology_dept"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="45dp"/>
            <ImageView
                android:src="@drawable/ic_ent_dept"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@drawable/ic_general_internal_dept"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@drawable/ic_mouth_dept"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:text="妇产科"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="五官科"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="普通内科"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="口腔科"
                android:textSize="15sp"/>


            <ImageView
                android:src="@drawable/ic_breath_dept"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:src="@drawable/ic_eye_dept"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@drawable/ic_liver_dept"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@drawable/ic_type_more"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:text="呼吸外科"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="眼科"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="肝胆内科"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:text="更多"
                android:textSize="15sp"/>
        </GridLayout>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名医推荐"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="230dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="5dp"/>
    <ListView
        android:id="@+id/lv_doctor_re_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="57dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>