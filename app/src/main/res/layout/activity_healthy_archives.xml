<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my.HealthyArchivesActivity"
    android:background="@color/colorBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryWhite">
        <ImageView
            android:id="@+id/iv_archives_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康档案"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加家人"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_card">

        <ImageView
            android:id="@+id/iv_archives_user_mg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_user"
            />
        <TextView
            android:id="@+id/iv_archives_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罗惠铎"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"/>
        <TextView
            android:id="@+id/iv_archives_user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="170dp"/>
        <TextView
            android:id="@+id/iv_archives_user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22岁"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="210dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="80dp"/>
        <ImageView
            android:id="@+id/iv_archives_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_marginTop="45dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_archives_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加病历"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp"
            />
    </FrameLayout>

    <ListView
        android:id="@+id/lv_archives_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:scrollbars="none"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>