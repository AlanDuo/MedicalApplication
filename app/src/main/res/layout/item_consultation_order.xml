<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_consultation_order_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_consultation_order_doctor_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="刘医生"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tv_consultation_order_doctor_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桂林附属医院 · 呼吸外科"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_consultation_order_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新冠肺炎"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:id="@+id/tv_consultation_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-2-2"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"/>
        <Button
            android:id="@+id/bt_consultation_order_record"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="180dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="5dp"
            android:text="问诊记录"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>
        <Button
            android:id="@+id/bt_consultation_order_prescription"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="5dp"
            android:text="处方"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>
        <Button
            android:id="@+id/bt_consultation_order_evaluate"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="5dp"
            android:text="评价"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>
    </FrameLayout>

</LinearLayout>