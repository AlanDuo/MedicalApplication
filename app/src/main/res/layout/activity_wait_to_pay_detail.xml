<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my.WaitToPayDetailActivity"
    android:background="@color/colorBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryWhite">
        <ImageView
            android:id="@+id/iv_wait_to_pay_detail_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待付款"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:id="@+id/tv_wait_to_pay_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="罗惠铎"/>
        <TextView
            android:id="@+id/tv_wait_to_pay_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="190dp"
            android:textSize="16sp"
            android:text="18178589543"/>
        <TextView
            android:id="@+id/tv_wait_to_pay_location"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"
            android:textSize="16sp"
            android:text="桂林电子科技大学花江校区"/>
        <TextView
            android:id="@+id/tv_wait_to_pay_location_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlue"
            android:text="修改"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryWhite">
                <ImageView
                    android:id="@+id/iv_wait_to_pay_detail_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:text="保为康口罩"/>
                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorRed"
                    android:text="¥ 20"/>

                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_shop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="16sp"
                    android:text="标准版"/>

                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:text="x 20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="20dp"
                    android:text="商品总价"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="¥ 400.00"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="20dp"
                    android:text="运费"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_logistics_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="¥ 0.00"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="100dp"
                    android:text="实付款："
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_wait_to_pay_detail_real_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="¥ 400.00"
                    android:textSize="16sp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="订单编号"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_wait_to_pay_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="123456789"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="创建时间"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_wait_to_pay_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="2020-2-2"
                    android:textSize="16sp"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryWhite">

        <Button
            android:id="@+id/bt_wait_to_pay_detail_toPay"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="付 款"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button_right"/>
        <Button
            android:id="@+id/bt_wait_to_pay_detail_cancel_Pay"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:text="取 消"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button_left"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>