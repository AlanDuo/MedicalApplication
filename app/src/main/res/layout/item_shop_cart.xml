<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryWhite">

        <ImageView
            android:id="@+id/iv_choose_it"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_circle"/>
        <ImageView
            android:id="@+id/iv_shop_cart_shop_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:id="@+id/tv_shop_cart_shop_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云南白药"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_shop_cart_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="180dp"
            android:text="¥ 200"
            android:textSize="16sp"
            android:textColor="@color/colorRed"/>
        <TextView
            android:id="@+id/tv_shop_cart_shop_amount"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:text="1"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/rounded_text_gray_stroke"/>
        <Button
            android:id="@+id/bt_shop_cart_amount_decrease"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="right"
            android:layout_marginRight="79dp"
            android:text="-"
            android:background="@drawable/rounded_text_gray_left_stroke"/>
        <Button
            android:id="@+id/bt_shop_cart_amount_add"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:text="+"
            android:background="@drawable/rounded_text_gray_right_stroke"/>
    </FrameLayout>


</LinearLayout>