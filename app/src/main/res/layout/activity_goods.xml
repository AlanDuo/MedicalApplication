<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.shop.GoodsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryWhite">
        <ImageView
            android:id="@+id/iv_goods_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_goods_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_card">
                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="¥ 20"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_goods_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="国外进口，专治癫痫"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能"
                    android:textSize="16sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_goods_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头疼脑热"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源"
                    android:textSize="16sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_goods_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路上捡的"
                    android:textSize="16sp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送"
                    android:textSize="16sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tv_goods_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东风速递"
                    android:textSize="16sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="评价"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_all_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看所有评价"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"/>
                <ImageView
                    android:id="@+id/iv_evaluate_user_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_user"/>
                <TextView
                    android:id="@+id/tv_evaluate_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alan"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:id="@+id/tv_evaluate_user_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="感觉人生已经达到了高潮"
                    android:textSize="16sp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="20dp"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="------商品详情------"/>
            <ImageView
                android:id="@+id/iv_goods_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginBottom="150dp"/>
        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryWhite">

        <Button
            android:id="@+id/bt_add_shop_cart"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="加入购物车"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/rounded_button_left"
            />
        <Button
            android:id="@+id/bt_right_buy"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="立即购买"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_button_right"
            />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>