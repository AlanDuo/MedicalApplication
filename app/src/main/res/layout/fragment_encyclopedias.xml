<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:background="@color/colorPrimaryWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <EditText
                android:id="@+id/et_search_news_input"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:background="@drawable/rounded_text"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="想看啥搜啥"/>

            <ImageView
                android:id="@+id/search_news_delete"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="搜索"
            android:textSize="20sp"/>
    </LinearLayout>

    <com.duo.medical.common.HorizontalListView
        android:id="@+id/horizontal_news_type"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/rounded_card"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="65dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_card">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶话题"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_hightlight"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:text="新冠肺炎疫情实时数据"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_card_hightlight"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计确诊"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="较上日新增"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现存确诊"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/tv_chinese_confirmedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100191"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/tv_chinese_incrVo_confirmedIncr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="155"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/tv_chinese_currentConfirmedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2912"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海外"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"/>

            <TextView
                android:id="@+id/tv_abroad_confirmedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100204007"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"/>
            <TextView
                android:id="@+id/tv_abroad_incrVo_confirmedIncr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="397922"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"/>
            <TextView
                android:id="@+id/tv_abroad_currentConfirmedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27560879"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"/>

        </FrameLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/news_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="57dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>