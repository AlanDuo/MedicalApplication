<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextGray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_card">
        <ImageView
            android:id="@+id/iv_user_img"
            android:src="@drawable/ic_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="80dp"
            android:text="请登录"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="280dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="320dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_wait_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wait_to_pay"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="35dp"/>
        <ImageView
            android:id="@+id/iv_wait_to_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wait_to_receive"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="120dp"/>
        <ImageView
            android:id="@+id/iv_shop_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shop_cart"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="200dp"/>
        <ImageView
            android:id="@+id/iv_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_order"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="275dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待收货"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="110dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="190dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="275dp"
            android:layout_marginBottom="10dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用工具"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_tools_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_wallet"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/iv_tools_my_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_prescription"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="100dp"/>
        <ImageView
            android:id="@+id/iv_tools_healthy_archives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_healthy_archives"
            android:layout_marginTop="49dp"
            android:layout_marginLeft="170dp"/>
        <ImageView
            android:id="@+id/iv_tools_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_feedback"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="250dp"/>
        <ImageView
            android:id="@+id/iv_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_customer_service"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:textSize="14sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的处方"
            android:textSize="14sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="95dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康档案"
            android:textSize="14sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="165dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题反馈"
            android:textSize="14sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="238dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="14sp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="20dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>