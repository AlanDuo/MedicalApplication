<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/iv_list_doctor_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_list_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘医生"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tv_list_doctor_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="副主任医师"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_list_doctor_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桂林附属医院 · 呼吸外科"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="擅长："
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_list_doctor_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="干啥啥不行"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="70dp"
            android:textSize="14sp" />
        <Button
            android:id="@+id/bt_list_doctor_ask"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:text="咨 询"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>

    </FrameLayout>
</LinearLayout>