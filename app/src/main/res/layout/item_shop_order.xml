<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_shop_order_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_shop_order_desc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="保为康口罩"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tv_shop_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 20"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@color/colorRed"/>
        <Button
            android:id="@+id/bt_shop_order_detail"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="180dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:text="详情"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>
        <Button
            android:id="@+id/bt_shop_order_evaluate"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:text="评价"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>
        <Button
            android:id="@+id/bt_shop_order_after_sales"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:text="售后"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/rounded_button"/>
    </FrameLayout>
</LinearLayout>